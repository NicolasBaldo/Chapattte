<% if @all_cart_items.present? %>
  <% @all_cart_items.each do |cart_item| %>
    <div class="cart-item-image col-2">
      <%= image_tag cart_item.item.image_url, alt: cart_item.item.title %>
    </div>
    <div class="cart-item-text col-8">
      <h4> <%= cart_item.item.title %></h4>
      <p> <%= cart_item.item.description %></p> 
    </div>
    <div class="cart-item-summary col-2">
      <p>Prix: <%= cart_item.item.price %> â‚¬ </p>
      <p>Quantity: 1</p>
    </div>
  <% end %>
<% else %>
  <p>Votre panier est vide.</p>
<% end %>

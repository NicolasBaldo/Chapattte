<%= form_with(model: user, local: true, method: :put) do |form| %>
  <div class="form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last name" %>
  </div>

  <div class="form-group">
    <%= form.emailt_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="actions text-center">
    <%= form.submit %>
  </div>
<% end %>